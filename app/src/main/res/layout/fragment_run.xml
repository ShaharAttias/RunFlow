<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/run_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D47A1">

    <LinearLayout
        android:id="@+id/run_center_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/run_LBL_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <Space android:layout_width="1dp" android:layout_height="12dp"/>

        <LinearLayout
            android:id="@+id/run_stats_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/run_LBL_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <Space android:layout_width="16dp" android:layout_height="1dp"/>

            <TextView
                android:id="@+id/run_LBL_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 min/km"
                android:textSize="18sp"
                android:textColor="#111827"/>
        </LinearLayout>

        <Space android:layout_width="1dp" android:layout_height="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/run_BTN_finish"
            style="@style/Widget.Material3.Button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:backgroundTint="#000000"
            app:cornerRadius="60dp"
            app:icon="@drawable/ic_stop_24"
            app:iconSize="70dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textTop"
            app:iconPadding="@dimen/cardview_default_radius"
            app:rippleColor="#26FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
