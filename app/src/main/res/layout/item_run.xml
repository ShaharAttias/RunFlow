<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    map:cardCornerRadius="16dp"
    map:cardElevation="2dp"
    map:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#EEEEEE">

        <TextView
            android:id="@+id/item_LBL_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 00:00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/item_LBL_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 0.00 km"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/item_LBL_pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pace: 0:00 min/km"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/item_mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:liteMode="true"
                map:mapType="normal" />

            <View
                android:id="@+id/item_map_click_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_LBL_noRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No route available"
            android:textColor="#888888"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
