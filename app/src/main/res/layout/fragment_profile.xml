<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_btn_logout"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:paddingHorizontal="12dp"
                />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:background="#EEF4FF">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_round"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/profile_change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Photo"
                    android:textColor="#0D47A1"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/profile_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age 23 â€¢ Female"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_btn_edit"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Edit details"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#0D47A1"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:rippleColor="#40FFFFFF"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_total_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#111827"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total KM"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_runs_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#111827"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runs"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/profile_pr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Records"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111827"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F0F4FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most time"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:id="@+id/profile_pr_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111827"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longest distance"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:id="@+id/profile_pr_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 km"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111827"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fastest pace"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:id="@+id/profile_pr_pace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:-- min/km"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111827"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/profile_past_runs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Runs"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111827"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_runs_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:paddingBottom="24dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
