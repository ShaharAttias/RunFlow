<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/plan_details_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_circle_left_24"
        app:title="Plan Details"
        app:titleTextColor="#111827"
        app:titleCentered="true" />

    <ScrollView
        android:id="@+id/plan_details_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/plan_details_toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnStartProgram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/planDetailsLBLTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:includeFontPadding="false"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/planDetailsLBLWeeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Week 1: Run 15 mins\nWeek 2: Run 20 mins\n..."
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:textColor="#374151"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartProgram"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="Start Program"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"
        app:cornerRadius="24dp"
        app:rippleColor="#40FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
