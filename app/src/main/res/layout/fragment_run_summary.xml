<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summary_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/summary_top_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#0D47A1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_half"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/summary_LBL_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <Space android:layout_width="1dp" android:layout_height="8dp"/>

        <LinearLayout
            android:id="@+id/summary_stats_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/summary_LBL_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <Space android:layout_width="16dp" android:layout_height="1dp"/>

            <TextView
                android:id="@+id/summary_LBL_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 min/km"
                android:textSize="24sp"
                android:textColor="#111827"/>
        </LinearLayout>

        <Space android:layout_width="1dp" android:layout_height="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/summary_BTN_resume"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_round_black"
                android:src="@drawable/ic_play_24"
                android:tint="#FFFFFF"
                android:scaleType="center"
                android:padding="0dp"/>

            <Space android:layout_width="16dp" android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/summary_BTN_home"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_round_black"
                android:src="@drawable/ic_stop_24"
                android:scaleType="center"
                android:padding="0dp"/>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/summary_MAP"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
